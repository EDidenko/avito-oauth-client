{
    "name": "avito/oauth2-avito",
    "description": "Avito OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Eugene Didenko",
            "email": "no-reply@xoms.ru",
            "homepage": "https://github.com/EDidenko"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "avito"
    ],
    "require": {
        "php": ">=7.1 || >=8.0",
        "ext-json": "*",
        "league/oauth2-client": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Avito\\OAuth2\\Client\\Provider\\": "src/"
        }
    },
    "scripts": {
        "style:check": "vendor/bin/phpcs",
        "style:fix": "vendor/bin/phpcbf",
        "git:prepush": [
            "@style:check"
        ]
    }
}
